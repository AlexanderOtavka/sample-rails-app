<header class="header">
  <h1 class="header__title">Images</h1>

  <%= link_to 'New Image', new_image_path %>
</header>

<p class="notice" id="notice"><%= notice %></p>

<main class="list">
  <% @images.each do |image| %>
    <article class="image">
      <img class="image__img" src="<%= image.url %>" />
      <h2 class="image__title"><%= image.title %></h2>
    </article>
  <% end %>
</main>
