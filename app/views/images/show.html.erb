<% provide :page_title, @image.title %>

<header class="header">
  <h1 class="header__title"><%= @image.title %></h1>

  <nav>
    <% if @user_token == @image.user_token %>
      <%= link_to 'Remove', @image, method: :delete,
                            data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Edit', edit_image_path(@image) %>
    <% end %>
    <%= link_to 'View Source', @image.url, target: "_blank" %>
    <%= link_to 'Back', images_path %>
  </nav>
</header>

<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<img class="big-image" src="<%= @image.url %>">
